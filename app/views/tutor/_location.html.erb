<div id="frame" class="animated bounceInUp">

  <div class="col-lg-12 col-md-12 col-sm-12 col-12" id="find_tutor_box">
    <h1 class="page_title" id="find_tutor_heading">ENTER YOUR LOCATION</h1>

      <%= form_for :location, remote: true, url: {action: "add_location"} do |f| %>
          <!--Subject field-->
          <div class="form-group ts-field">
          </div>
          <!--Course field-->
          <!--Question field-->
          <div class="form-group ts-field">
            <div class="question-area">
              <%= label :name, "Location" %>
              <p>(Example: Library in the West Building, 3rd Floor by the window)</p>
              <%= f.text_area :location, required: 'required', value: "", class: "ft-field" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary submit ft-field" %>
          </div>
      <% end %>
    </div>

    <!-- temporary just to check if the data stored in TutoringSession -->

</div>
