<div id="frame" class="animated bounceInUp">

  <div id="find_tutor_box">
    <h1 class="page_title">Find a Tutor</h1>

      <%= form_for TutoringSession.new, remote: true, url: {action: "create"} do |f| %>
          <!--Subject field-->
          <div class="form-group ts-field">
            <div class="subject-area">
              <%= label :tutoring_session, :subject %>
              <%= collection_select :subject, :id, Subject.all, :id, :abbrev_and_name, {:include_blank => true}, {:required => true, :id => 'subjects_select', :class => "ft-field"} %>
            </div>
          </div>
          <!--Course field-->
          <div class="form-group ts-field">
            <div class="course-area">
              <%= render partial: 'select_course', locals: {subject_id: nil}, required: 'required', class: "ft-field" %>
            </div>
          </div>
          <!--Question field-->
          <div class="form-group ts-field">
            <div class="question-area">
              <%= label :tutoring_session, "Question" %>
              <p>(Give a short overview of the problem you're having issues with.)</p>
              <%= f.text_area :question, required: 'required', value: "", class: "ft-field question_box" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.hidden_field :user_id, value: current_user.id%>
            <%= f.submit "Submit", class: "btn btn-lg complete_btn ft-field" %>
          </div>
      <% end %>
    </div>

</div>
