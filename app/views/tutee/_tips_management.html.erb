<div id="frame" class="animated bounceInUp">
<div class="row justify-content-center">
	<div class="col-sm-8">
	<h1 class="page_title">Tips Box</h1>
	<h5>Buy Tip Points to Tip your favorite Tutor!</h5>
	<%= form_tag currency_path do %>

	    <% if flash[:error].present? %>
	      <div id="error_explanation">
	        <p><%= flash[:error] %></p>
	      </div>
	    <% end %>

	<article>
	   <%= label_tag(:amount, 'Amount: $') %>
	   <%= text_field_tag(:amount) %>
	  <%= hidden_field_tag 'method', 'update'%>
	 </article>
	 <article>
	   <%= hidden_field_tag(:stripeToken) %>
	 </article>
	 <button id="PayButton">Pay with Credit Card </button>
	<% end %>
	</div>
</div>
</div>
