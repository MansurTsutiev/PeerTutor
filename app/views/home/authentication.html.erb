<DOCTYPE html>
<html>
	<head>
		<title>YelpCamp</title>
		<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">  <!-- bootstrap css-->
		<!-- <link rel="stylesheet" href=""> -->
		<style>
			button {
				width: 200px;
				height: 250px;
			}
			#button-box {
				margin-top: 70px;
			}
		</style>
	</head>
	<body>
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="/">Peer Tutor</a>
				</div>
				<div class="collapse navbar-collapse">
					<ul class="nav navbar-nav navbar-right">
						<% if user_signed_in? %>
							<li><a href="#">Signed In As <%= current_user %></a></li>
							<li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</nav>
		
		<div class="container text-center" id="button-box">
			<div class="col-md-2 col-md-offset-2">
				<button type="button" class="btn btn-primary btn-lg">Tutuor</button>
			</div>
			<div class="col-md-2 col-md-offset-3">
				<button type="button" class="btn btn-secondary btn-lg">Tutee</button>
			</div>

		</div>

	</body>
</html>
