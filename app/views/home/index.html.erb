<!--=============HOME PAGE=================-->
<div class="home_main">
<header>
	<%= render 'layouts/navigation_bar' %>
</header>

<div id="main_page_body">
	<div class="style_text" id="main-header">
		<p><%= @header_text%></p>
	</div>
	<%=image_tag("stepdoodle.png", alt: "doodle of how the website works", :id => "doodle_img")%>
	<div class="container" id="steps">
  		<div class="row style_text">
    		<div class="col-md-4 col-sm-4 col-xs-4 col-4"><%= @step_one %></div>
    		<div class="col-md-4 col-sm-4 col-xs-4 col-4" id="step2"><%= @step_two %></div>
    		<div class="col-md-4 col-sm-4 col-xs-4 col-4"><%= @step_three %></div>
  		</div>
	</div>

	<!--Start Button-->
	<div class="center">
		<%= link_to home_authentication_path do %>
			<%=image_tag("startButtonDefault.png", alt: "start button", :id => "start_img")%>
		<% end %>
	</div>
</div>
<%= render 'layouts/footer' %>
</div>
